#!/usr/bin/env bash
set -euo pipefail

# -----------------------------------------------------------------------------
# Interpolate STDIN by wrapping it in a HEREDOC script piped to bash to create
# a simple templating processor
# -----------------------------------------------------------------------------

# Load .env if exists
if [[ -f .env ]]
then
    set -a
    source .env
    set +a
fi

(
    echo set -euo pipefail
    echo -n 'cat <<'
    echo -e '\04'
    cat
    echo -e '\04'
) | bash
